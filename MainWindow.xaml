<Window x:Class="TheGriddler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="The Griddler (1.0.0.0)" Height="650" Width="800"
        Background="#F0F0F0" Icon="Resources/icon.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Column 0: Monitor Configuration -->
            <GroupBox Grid.Column="0" Header="Monitors" Margin="0,0,5,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Configure grid dimensions for each monitor." FontStyle="Italic" Margin="5"/>
                    <ListBox ItemsSource="{Binding MonitorConfigs}" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Cols:" VerticalAlignment="Center" Margin="5,0"/>
                                        <TextBox Text="{Binding Columns, UpdateSourceTrigger=PropertyChanged}" Width="30" TextAlignment="Center"/>
                                        <TextBlock Text="Rows:" VerticalAlignment="Center" Margin="5,0"/>
                                        <TextBox Text="{Binding Rows, UpdateSourceTrigger=PropertyChanged}" Width="30" TextAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </GroupBox>

            <!-- Column 1: Info and Bindings -->
            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                <GroupBox Header="App" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox Content="Run on Startup" IsChecked="{Binding RunOnStartup}" Margin="0,2"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Input Bindings">
                    <DataGrid ItemsSource="{Binding Bindings}" AutoGenerateColumns="False" IsReadOnly="True" Height="150" Background="White">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Key" Width="*" Binding="{Binding Key}"/>
                            <DataGridTextColumn Header="Command" Width="*" Binding="{Binding Command}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <GroupBox Header="Controls" Margin="0,10,0,0">
                    <TextBlock TextWrapping="Wrap" Margin="5">
                        Drag a window, then press a bound key (Space/Right-Click) to activate the grid.
                    </TextBlock>
                </GroupBox>

                <GroupBox Header="About" Margin="0,10,0,0">
                    <StackPanel Margin="5">
                        <TextBlock Text="The Griddler" FontWeight="Bold"/>
                        <TextBlock Text="Credits:" Margin="0,5,0,0" FontWeight="SemiBold"/>
                        <TextBlock Text="derac"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
