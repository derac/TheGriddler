<Window x:Class="WindowGridRedux.GridOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GridOverlay" Height="450" Width="800"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" WindowStartupLocation="Manual"
        Loaded="Window_Loaded">
    <Grid Name="MainGrid">
        <ItemsControl Name="GridItems">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid x:Name="GridPanel" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#22FFFFFF" BorderThickness="0.5">
                        <Grid Background="Transparent" MouseEnter="GridCell_MouseEnter" MouseLeftButtonDown="GridCell_MouseLeftButtonDown" />
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <Border Name="SelectionRect" Background="#2200FFFF" BorderBrush="#8800FFFF" BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed" IsHitTestVisible="False" />
    </Grid>
</Window>
